<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16sp"
    app:cardCornerRadius="1dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/custom_borda_cardview"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/descricao_salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/corPreta"
                android:textSize="25dp"
                android:text="Deseja salvar este local"
                android:textAlignment="center"
                android:layout_margin="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/botao_nao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="16sp"
                android:layout_marginEnd="8dp"
                android:text="NÃ£o"
                android:textStyle="bold"
                android:background="@drawable/borda_botao"
                android:textColor="@color/corPreta"
                app:layout_constraintTop_toBottomOf="@id/descricao_salvar"
                app:layout_constraintStart_toStartOf="@id/descricao_salvar"
                app:layout_constraintEnd_toStartOf="@id/botao_sim"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/botao_sim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sim"
                android:textStyle="bold"
                android:textColor="@color/corPreta"
                android:background="@drawable/borda_botao"
                app:layout_constraintStart_toEndOf="@id/botao_nao"
                app:layout_constraintTop_toTopOf="@id/botao_nao"
                app:layout_constraintBottom_toBottomOf="@id/botao_nao"
                app:layout_constraintEnd_toEndOf="@id/descricao_salvar"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>