<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.Light">
        <item name="android:color">@color/corBranca</item>
        <item name="android:textColorPrimary">@color/corBranca</item>
        <item name="android:textColorHint">@color/corHint</item>
    </style>

    <style name="Spinner" parent="AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/corPreta</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
